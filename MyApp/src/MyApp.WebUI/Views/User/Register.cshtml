@model MyApp.WebUI.Models.User.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "User", FormMethod.Post))
{
    <div class="container register">
        <div class="row">

            <!-- Left Column -->
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Welcome Dear Users</h3>
                <p>
                    This Example is for learning Basic Login and Registration Using ADO.NET in MVC.
                    <br />Hope this will boost your Knowledge.
                </p>
            </div>

            <!-- Right Column -->
            <div class="col-md-9 register-right">

                <!-- Tabs -->
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active"
                           id="home-tab"
                           data-toggle="tab"
                           href="../User/Register"
                           role="tab"
                           aria-controls="home"
                           aria-selected="true">
                            Register
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           id="profile-tab"
                           data-toggle="tab"
                           href="../User/Login"
                           role="tab"
                           aria-controls="profile"
                           aria-selected="false">
                            Login
                        </a>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active"
                         id="home"
                         role="tabpanel"
                         aria-labelledby="home-tab">

                        <h3 class="register-heading">Register New User</h3>

                        <div class="row register-form">

                            <!-- Left Inputs -->
                            <div class="col-md-6">
                                <div class="form-group m-2">
                                    @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control", placeholder = "First Name *" })
                                    @Html.ValidationMessageFor(e => e.FirstName)
                                </div>

                                <div class="form-group m-2">
                                    @Html.TextBoxFor(e => e.LastName, new { @class = "form-control", placeholder = "Last Name *" })
                                    @Html.ValidationMessageFor(e => e.LastName)
                                </div>
                                
                                <div class="form-group m-2">
                                    @Html.TextBoxFor(e => e.Email, new { @class = "form-control", @type="email", placeholder = "Your Email *" })
                                    @Html.ValidationMessageFor(e => e.Email)
                                </div>
                            </div>

                            <!-- Right Inputs -->
                            <div class="col-md-6">
                            <div class="m-2 input-group date" id="datepicker">
                                <input type="text" class="form-control" id="date"/>
                                <span class="input-group-append">
                                    <span class="input-group-text bg-light d-block">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </span>
                            </div>
                                @* <div class="form-group m-2">
                                    @Html.TextBoxFor(e => e.BirthDate, new { @class = "form-control", placeholder = "Your Birth Date *" })
                                    @Html.ValidationMessageFor(e => e.BirthDate)
                                </div> *@

                                <div class="form-group m-2">
                                    @Html.PasswordFor(e => e.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                                    <span id="result"></span>
                                    @Html.ValidationMessageFor(e => e.Password)
                                </div>

                                <div class="form-group m-2">
                                    @Html.PasswordFor(e => e.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password *" })
                                    @Html.ValidationMessageFor(e => e.ConfirmPassword)
                                </div>

                                <input type="submit" class="btnRegister" value="Register" />
                            </div>

                        </div> <!-- row register-form -->

                    </div> <!-- tab-pane -->
                </div> <!-- tab-content -->

            </div> <!-- col-md-9 register-right -->

        </div> <!-- row -->
    </div> <!-- container -->
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('#datepicker').datepicker({
                format: "dd/mm/yyyy",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}